<h1 class="mt-5">Users</h1>

<div class="row">
<div class="col-md-4">   
<form method="post" id="addUserForm" action="/users/add">
  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputName" name="name" placeholder="Name">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputemail" class="col-sm-2 col-form-label">email</label>
    <div class="col-sm-10">
      <input type="text"
    pattern="/^[a-zA-Z0-9.!#$%&â€™*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/"
    required class="form-control" id="inputemail" name="email" placeholder="email">
    </div>
  </div>
   <div class="form-group row">
    <label for="inputpassword" class="col-sm-2 col-form-label">password</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputpassword" name="password" placeholder="">
    </div>
  </div>
   <div class="form-group row">
    <label for="inputacl" class="col-sm-2 col-form-label">acl</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputacl" name="acl" placeholder="">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="button" id="btnSubmit" class="btn btn-primary">Add User</button>
    </div>
  </div>
</form>
</div> 

